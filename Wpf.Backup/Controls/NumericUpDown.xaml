<UserControl x:Class="Wpf.Backup.Controls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf.Backup.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="txtNum" x:FieldModifier="private" Margin="0,0,0,5" Text="0" TextChanged="txtNum_TextChanged" IsReadOnly="True" IsHitTestVisible="False"
                 MinWidth="50" HorizontalContentAlignment="Center" />
        <Button x:Name="cmdUp" x:FieldModifier="private" Margin="5,0,0,5" Content="˄" Width="20" Click="cmdUp_Click" />
        <Button x:Name="cmdDown" x:FieldModifier="private" Margin="0,0,0,5"  Content="˅" Width="20" Click="cmdDown_Click" />
    </StackPanel>
</UserControl>
